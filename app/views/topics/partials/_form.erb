<div class='modal fade form-modal' id='add_more_speakers' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <%= form_for @topic do |f| %>
              <% if @topic.errors.any? %>
                  <div id="error_explanation">
                    <ul class="col-lg-offset-3 col-md-offset-3 col-sm-offset-4">
                      <% @topic.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class='form-horizontal'>
                <div class='form-group'>
                  <div class='col-lg-2 col-md-2 col-sm-3 col-xs-4'>
                    <%= f.label :title %>
                    <span class="required">*</span>
                  </div>
                  <div class='col-lg-10 col-md-10 col-sm-9'>
                    <%= f.text_field :title, class: 'form-control', autofocus: true, maxlength: 250 %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
                    <%= f.label :type %>
                    <span class="required">*</span>
                  </div>
                  <div class='col-lg-10 col-md-10 col-sm-9'>
                    <%= f.select(:category, ['Crisp Talk (10min)', 'Presentation (30min)', 'Workshop/Long Talk (60min)'], {}, {:class => 'form-control'}) %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
                    <%= f.label :description %>
                    <span class="required">*</span>
                  </div>
                  <div class='col-lg-10 col-md-10 col-sm-9'>
                    <%= f.text_area :description, class: 'form-control', maxlength: 2000 %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-4">
                    <%= f.submit 'Register Topic', class: 'btn btn-primary', id: 'submit_topic' %>
                  </div>
                </div>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>