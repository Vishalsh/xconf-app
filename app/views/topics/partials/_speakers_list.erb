<div class='modal fade form-modal' id='add_more_speakers' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4>Add More Speakers</h4>
      </div>
      <div class="modal-body">

        <div class="alert alert-danger"></div>
        <div class="alert alert-info">
          <div class="loader">Please Wait</div>
        </div>

        <input type="hidden" value="<%= @topic_id %>" id="topic_id"/>

        <div class="row">
          <label class="col-lg-4 col-md-4 col-sm-4">Current Speakers:</label>

          <div class="col-lg-8 col-md-8 col-sm-8">
            <span><%= convert_array_to_string(@speakers) %></span>
          </div>
        </div>

        <div class="row">
          <label class="col-lg-4 col-md-4 col-sm-4">Add Speakers:</label>

          <div class="col-lg-8 col-md-8 col-sm-8">
            <input class="form-control" name="newSpeakers" id="new_speakers" placeholder="Comman seperated list of names"/>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="add_speakers">Add Speakers</button>
        <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
  </div>
</div>